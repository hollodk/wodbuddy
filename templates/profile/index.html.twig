{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<h1>Hello!</h1>

<div class="row">
    <div class="col-sm-6">
    </div>

    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                Participants
            </div>
            <div class="card-body">
                <p>Here is a list of your latest participants.</p>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>WOD</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participant in participants %}
                        <tr>
                            <td>{{ participant.createdAt|date('m/d H:i') }}</td>
                            <td>{{ participant.wod.description|nl2br }}</td>
                            <td class="text-right">
                                <a class="btn btn-sm btn-primary" href="{{ path('app_default_wod', {'id':participant.wod.id}) }}">Go to WOD</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="2">You have not participanted in any WODs yet</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
